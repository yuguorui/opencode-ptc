{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode-ptc",
  "version": "0.1.0",
  "description": "Programmatic Tool Calling (PTC) plugin for OpenCode - Execute tools/agents/skills via JavaScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "plugin",
    "mcp",
    "programmatic-tool-calling",
    "ptc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.14",
    "@opencode-ai/sdk": "github:yuguorui/opencode#@opencode-ai/sdk-9ea99f597-gitpkg"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0.0"
  },
  "overrides": {
    "@opencode-ai/sdk": "$@opencode-ai/sdk"
  }
}
